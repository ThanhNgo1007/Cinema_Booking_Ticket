<ScrollPane fitToWidth="true" style="-fx-background-color: #fdfcf0;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Cinema.controller.ShowAllMoviesController">
   <content>
      <VBox alignment="CENTER" style="-fx-background-color: #fdfcf0;">
         <children>
            <HBox alignment="CENTER" fillHeight="false" prefHeight="96.0" prefWidth="282.0" VBox.vgrow="NEVER">
               <children>
                  <TextField fx:id="getMovieSearchInput" onKeyPressed="#searchMovies" prefHeight="36.0" prefWidth="377.0" promptText="Tìm kiếm theo tên phim hoặc thể loại ..." style="-fx-border-color: grey  transparent  grey  grey; -fx-border-radius: 50 0 0 50; -fx-background-color: transparent;">
                     <cursor>
                        <Cursor fx:constant="TEXT" />
                     </cursor>
                  </TextField>
                  <Pane prefHeight="36.0" style="-fx-border-color: grey grey grey transparent; -fx-border-radius: 0 50 50 0;">
                     <children>
                        <ImageView fx:id="movieSearchBtn" fitHeight="27.0" fitWidth="24.0" layoutX="-12.0" layoutY="6.0" onMouseClicked="#handleClickIcon" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../image/icons8-search-50.png" />
                           </image>
                           <cursor>
                              <Cursor fx:constant="DEFAULT" />
                           </cursor>
                        </ImageView>
                     </children>
                     <HBox.margin>
                        <Insets bottom="-1.0" left="-1.0" right="-1.0" top="-1.0" />
                     </HBox.margin>
                  </Pane>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="84.0" prefWidth="779.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="45.0" prefWidth="201.0" spacing="15.0">
                     <children>
                        <Line endX="100.0" startX="-100.0" />
                        <Line endX="100.0" startX="-100.0" />
                     </children>
                  </VBox>
                  <ImageView fitHeight="42.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../image/movie/h3_movie_selection.gif" />
                     </image>
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </ImageView>
                  <VBox alignment="CENTER" spacing="15.0">
                     <children>
                        <Line endX="100.0" startX="-100.0" />
                        <Line endX="100.0" startX="-100.0" />
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" top="20.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <GridPane fx:id="grid" alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity">
                     <columnConstraints>
                        <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" maxWidth="298.0" minWidth="-Infinity" prefWidth="270.0" />
                        <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" maxWidth="588.0" minWidth="-Infinity" prefWidth="270.0" />
                        <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" maxWidth="597.0" minWidth="-Infinity" prefWidth="270.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="-Infinity" />
                        <RowConstraints minHeight="-Infinity" />
                        <RowConstraints maxHeight="94.0" minHeight="0.0" prefHeight="0.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                  </GridPane>
               </children>
            </HBox>
         </children>
      </VBox>
   </content>
</ScrollPane>
